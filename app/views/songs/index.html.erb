<h1>自分の題名</h1>


<%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
<h3>一覧ページ</h3>

<h3>投稿を検索</h3>
<%= form_tag({controller:"songs",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
 <% end %>

<%= link_to "新規投稿へ", new_song_path %>

  <% if user_signed_in? %>
    <%= link_to "マイページへ", user_path(current_user.id) %>
  <% end %>

  <% @songs.each do |t| %>
    <div class="song">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= find_youtube_url(t.youtube_url) %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe><br>
    <%= link_to t.user.name, user_path(t.user.id) %>
      <%= t.name %>
      <%= t.title %>
      <%= t.genre %>
      <%= t.comment %>
      </div>



<!--以下いいね機能-->
   <% if user_signed_in? %>
       <% if current_user.already_liked?(t) %>
           <%= link_to song_like_path(id: t.id, song_id: t.id), method: :delete do %>
              <i class="fas fa-heart"></i><%= t.likes.count %>
           <% end %>
       <% else %>
           <%= link_to song_likes_path(id: t.id, song_id: t.id), method: :post do %>
               <p>いいね</p><%= t.likes.count %>
           <% end %>
       <% end %>
   <% else %>
       <i class="far fa-heart"></i><%= t.likes.count %>
   <% end %>
   <% end %>
</div>

<br><h1>ランキング機能</h1>
<% @rank_songs.each do |t| %>
  <%= t.name %>
    <%= t.title %>
    <%= t.genre %>
    <%= t.comment %><br>
<% end %>  
